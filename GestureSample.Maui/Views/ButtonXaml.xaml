    <Grid RowDefinitions="3*,2*" ColumnDefinitions="*,*,*,*,*,5,*,*,*,*,*" RowSpacing="5" ColumnSpacing="5" BackgroundColor="Black">

        <ScrollView Grid.Row="0" Grid.ColumnSpan="11" VerticalOptions="Start" BackgroundColor="AntiqueWhite">
                <VerticalStackLayout
            Spacing="5"
            Padding="20,15"
            VerticalOptions="Start"
                    HeightRequest="400">

                    <!--<Image
                Source="dotnet_bot.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />-->

                    <Label
                Text="{Binding TrueStatement}"
                FontSize="18"
                     WidthRequest="250" HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
                <Entry Keyboard="Numeric"  Text="{Binding SSum}"   IsReadOnly="{Binding IsReadOnly}" IsEnabled="{Binding SumEnabled}"
                    x:Name="txtSum"


                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center"
                BackgroundColor="Yellow"
                WidthRequest="240">
                        
                    </Entry>

                    <HorizontalStackLayout
            Spacing="5"
            Padding="0"
            HorizontalOptions="Center"
            >

                    <Entry Keyboard="Numeric"  Text="{Binding SAddent1}" IsReadOnly="{Binding IsReadOnly}" IsVisible="{Binding IsNotBlind}" IsEnabled="{Binding Addent1Enabled}"
                    x:Name="txtAddent1"
                    FontSize="18"
                    BackgroundColor="Yellow"
                    WidthRequest="120" >
                    </Entry>

                    <Entry Keyboard="Numeric"    Text="{Binding SAddent2}" IsReadOnly="{Binding IsReadOnly}" IsVisible="{Binding HasTwoAddents}" IsEnabled="{Binding Addent2Enabled}"
                toolkit:SetFocusOnEntryCompletedBehavior.NextElement="{x:Reference txtSum}" x:Name="txtAddent2"

                       FontSize="18"
                    BackgroundColor="Lavender"
                       WidthRequest="120">
                    </Entry>
                    </HorizontalStackLayout>
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="20" Padding="20">
                   <Button                x:Name="CheckBtn"                
                                          Text="Check"      
                                          
                                          Command="{Binding CheckCommand}"
                IsEnabled="{Binding IsEnabledTotal}"
                                          HorizontalOptions="Center" IsVisible="{Binding IsNotSync}"  />

                   <!-- <Label Text="{Binding SecondsToEnd}" IsVisible="{Binding ShowSecondsToEnd}" FontSize="18" 
                HorizontalOptions="Center"/>-->
                    <Button
                Text="Next"
                Command="{Binding NextCommand}"
                        IsEnabled="{Binding IsNotFirstGuess}"
                HorizontalOptions="Center" IsVisible="{Binding IsNotSync}"  />

                </HorizontalStackLayout>

                <HorizontalStackLayout  HorizontalOptions="Center">
                    <Label Text="{Binding History}" HorizontalOptions="Center"/>
                </HorizontalStackLayout>
                <Label Text="{Binding DecompositionLevel,StringFormat='Level: {0}'}"  IsVisible="{Binding IsDecomposition}"/>
                <Picker WidthRequest="100" HorizontalOptions="Start" SelectedItem="{Binding DecompositionLevel}"  IsVisible="{Binding IsDecomposition}" Title="{Binding DecompositionLevel, StringFormat='Level: {0}'}" >
                    <Picker.Items>
                        <x:String>1</x:String>
                        <x:String>2</x:String>
                        <x:String>3</x:String>
                    </Picker.Items></Picker>
                <Label Text="{Binding StreakCorrect,StringFormat='Correct in this Level:{0} (reach 20 to level up)'}" VerticalOptions="Center" IsVisible="{Binding IsDecomposition}"/>
                <Label Text="{Binding StreakWrong,StringFormat='Wrong in a row: {0} (reach 5 and you level down) '}" VerticalOptions="Center" IsVisible="{Binding IsDecomposition}"/>

            </VerticalStackLayout>
            </ScrollView>


