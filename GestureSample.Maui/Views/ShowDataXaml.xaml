<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
				xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
				xmlns:mr="clr-namespace:MR.Gestures;assembly=MR.Gestures"
				x:Class="GestureSample.Views.ShowDataXaml">

    <ScrollView>
        <VerticalStackLayout>
            <CollectionView x:Name="StateList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,*,*,*,*,*">
                            <Label Grid.Column="0" Text="{Binding TimeStamp }"/>
                            <Label Grid.Column="0" Text="{Binding UserId}"/>
                            <Label Grid.Column="0" Text="{Binding TypeName}"/>
                            <Label Grid.Column="0" Text="{Binding Sum}"/>
                            <Label Grid.Column="0" Text="{Binding Addent1}"/>
                            <Label Grid.Column="0" Text="{Binding Addent2}"/>



                        </Grid>
                        
                        
                    </DataTemplate>
                    
                    
                </CollectionView.ItemTemplate>
                
            </CollectionView>
            
            
        </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>